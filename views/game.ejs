                    <img src="/images/cardImages/<%= cards[i] %>.png" alt="card image">
                </button>
                <% if (i == 3) { %>
                    <br>
                <% } %>
            <% } %>
            <br>
            <button type="submit" id="reset" onclick="reloadDeck()">
                reset.
            </button>
            <script>function reloadDeck() {location.reload}</script>
        </div>
    </div>
    
    <h2 id="prove">prove your worth</h2>
    <table class="scoreboard">
        <tr>
            <th colspan="2">Top Players</th>
        </tr>
        <% topPlayers.forEach(function(player) { %>
        <tr>
            <td><%= player.username %></td>
            <td><%= player.highScore %></td>
        </tr>
        <% }); %>
    </table>



